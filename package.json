{
  "name": "privily",
  "description": "privily 是一个高阶函数，用于为 JavaScript/TypeScript 类创建私有变量作用域。通过这个工具，开发者可以轻松实现类中的私有变量，而无需依赖外部库或语言级别的私有成员特性。它为每个类实例提供了一个独立但安全的私有作用域，从而提高了代码的封装性与安全性",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build-site": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "compile": "es-pkg compile",
    "unpkg": "es-pkg unpkg",
    "doc": "es-pkg doc",
    "publish": "es-pkg publish"
  },
  "dependencies": {
  },
  "devDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "es-pkg": "latest",
    "vite-plugin-checker": "^0.6.4"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "privify"
  ],
  "homepage": "https://github.com/robertpanvip/privily.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/robertpanvip/privily.git"
  },
  "bugs": {
    "url": "https://github.com/robertpanvip/privily/issues"
  },
  "author": "robertpanvip",
  "license": "ISC"
}